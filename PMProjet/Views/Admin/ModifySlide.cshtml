@{
    ViewData["Title"] = "Admin";
}

@model PMProjet.ViewModels.SlideProjectViewModel

<!-- Page Content -->
<div class="container">
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Admin
                <small>Configure your content</small>
            </h1>
        </div>
    </div>

    @using (Html.BeginForm())
    {
    <fieldset>

        <legend>Modifier un slide</legend>

        <div>
            @Html.LabelFor(model => model.ProjectId)
            @Html.TextBoxFor(model => model.ProjectId)
            @Html.ValidationMessageFor(model => model.ProjectId)
        </div>
        <div>
            @Html.LabelFor(model => model.Slide.Id)
            @Html.TextBoxFor(model => model.Slide.Id)
            @Html.ValidationMessageFor(model => model.Slide.Id)
        </div>
        <div>
            @Html.LabelFor(model => model.Slide.Description)
            @Html.TextBoxFor(model => model.Slide.Description)
            @Html.ValidationMessageFor(model => model.Slide.Description)
        </div>
        <div>
            @Html.LabelFor(model => model.Slide.Image)
            @Html.TextBoxFor(model => model.Slide.Image)
            @Html.ValidationMessageFor(model => model.Slide.Image)
        </div>

        <br />
        <input type="submit" value="Ajouter" />
    </fieldset>
    }
</div>

<footer>
    <p>&copy; 2018 - Copyright UQAC</p>
</footer>
