@{
    ViewData["Title"] = "Admin";
}

@model PMProjet.ViewModels.AdminViewModel

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2
    }

    th {
        background-color: #4CAF50;
        color: white;
    }
</style>

<!-- Page Content -->
<div class="container">
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Admin
                <small>Configure your content</small>
            </h1>
        </div>
    </div>

    <h2>User</h2>
    <table>
        <tr>
            <th>FirstName</th>
            <th>LastName</th>
            <th>JobTitle</th>
            <th>Pseudo</th>
            <th>Password</th>
            <th>Modify</th>
        </tr>
        <tr>
            <td>@Model.User.FirstName</td>
            <td>@Model.User.LastName</td>
            <td>@Model.User.JobTitle</td>
            <td>@Model.User.Pseudo</td>
            <td>*****</td>
            <td>@Html.ActionLink("Modify", "ModifyUser", "Admin")</td>
        </tr>
    </table>

    <hr />

    <h2>Projects</h2>
    @Html.ActionLink("Add", "AddProject", "Admin")
    <table>
        <tr>
            <th>Name</th>
            <th>Date</th>
            <th>Description</th>
            <th>Thumbnail</th>
            <th>Modify</th>
            <th>Delete</th>
        </tr>
        @foreach (var project in Model.Projects)
        {
        <tr>
            <td>@project.Name</td>
            <td>@project.Date</td>
            <td>@project.Description</td>
            <td>@project.Thumbnail</td>
            <td>@Html.ActionLink("Modify", "ModifyProject", "Admin", new { projectId = project.Id })</td>
            <td>@Html.ActionLink("Delete", "DeleteProject", "Admin", new { projectId = project.Id })</td>
        </tr>
        }
    </table>

    <hr />

    <h2>Educations</h2>
    @Html.ActionLink("Add", "AddEducation", "Admin")
    <table>
        <tr>
            <th>Name</th>
            <th>Date</th>
            <th>Description</th>
            <th>Thumbnail</th>
            <th>Modify</th>
            <th>Delete</th>
        </tr>
        @foreach (var education in Model.Educations)
        {
        <tr>
            <td>@education.Name</td>
            <td>@education.Date</td>
            <td>@education.Description</td>
            <td>@education.Thumbnail</td>
            <td>@Html.ActionLink("Modify", "ModifyEducation", "Admin", new { educationId = education.Id })</td>
            <td>@Html.ActionLink("Delete", "DeleteEducation", "Admin", new { educationId = education.Id })</td>
        </tr>
        }
    </table>

    <hr />

</div>

<footer>
    <p>&copy; 2018 - Copyright UQAC</p>
</footer>