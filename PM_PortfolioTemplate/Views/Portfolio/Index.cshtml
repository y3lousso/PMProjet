@{
    ViewData["Title"] = "Portfolio Page";
}
@model List<PMProjet.Models.Project>

<!-- Page Content -->
<div class="container">
    <!-- Page Header -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                PORTFOLIO
                <small>Secondary Text</small>
            </h1>
        </div>
    </div>

    @foreach (var project in Model)
    {
        <div class="row">
            <div class="col-md-4 portfolio-item">
                <a href="#">
                    <img class="img-responsive" src="http://placehold.it/700x400" alt="">
                </a>
                <h3>
                    <a href="#"><b>@project.Name</b> @project.Date </a>
                </h3>
                <p>@project.Description</p>
            </div>
        </div>
    }
    <footer>
        <p>&copy; 2018 - Copyright UQAC</p>
    </footer>
</div>
<!-- /.container -->
